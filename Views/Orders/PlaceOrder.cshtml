@model List<CartItem>

@{
	ViewData["Title"] = "Create";
}

<h1>Place Order</h1>

<hr />
<div class="container">
	<table class="table table-hover table-bordered">
		<thead>
			<tr>
				<th scope="col">Product Name</th>
				<th scope="col">price</th>
				<th scope="col">quantity</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Product.Name</td>
					<td>@item.Product.Price.ToString("C0")</td>
					<td>@item.Quantity</td>
				</tr>
			}

			@* <div class="form-group">
			<label asp-for="@item" class="control-label"></label>
			<input asp-for="Amount" class="form-control" />
			<span asp-validation-for="Amount" class="text-danger"></span>
			</div>
			<p>Tax = $10</p>
			<p>Shipments = $5</p>
			<div class="form-group">
			<label asp-for="Total" class="control-label"></label>
			<input asp-for="Total" class="form-control" />
			<span asp-validation-for="Total" class="text-danger"></span>
			</div> *@

		</tbody>
	</table>
	<div class="card">
		<h5 class="card-header">Total</h5>
		<div class="card-body">
			<h5 class="card-title">@ViewBag.total.ToString("C1")</h5>
			<a asp-action="PlaceOrderConfirmed" class="btn btn-success">Confirm</a>
		</div>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
